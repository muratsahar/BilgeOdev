@model BilgeadamHomework.Models.EntityFramework.Departman
@{
    ViewBag.Title = "Yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Departman", FormMethod.Post))//action ve metodu oluşturur.
{
    @Html.AntiForgeryToken()@*Author. kontrolü*@
    <div class="form-group">
        @Html.LabelFor(m => m.Ad) @*modeldeki ada göre oluştur.*@
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ad)
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-success">Kaydet</button>
}

@section scripts
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}@*Bu alan, layoutta renderscript alanına gidecek.*@
